# ðŸš€ KMU DisciplineDesk - Environment Configuration Example
# Copy this file to .env and update the values for your deployment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=5000
JWT_SECRET=your_very_secure_jwt_secret_here_change_this_in_production
JWT_EXPIRES_IN=24h

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Choose one: 'mongo' or 'mysql'
DB_TYPE=mongo

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/kmu_discipline_desk
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kmu_discipline_desk?retryWrites=true&w=majority

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=kmu_user
MYSQL_PASSWORD=your_secure_password
MYSQL_DATABASE=kmu_discipline_desk

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# =============================================================================
# SCHOOL INTEGRATION (OPTIONAL)
# =============================================================================
# Direct Database Connection to School Database
SCHOOL_DB_ENABLED=false
SCHOOL_DB_HOST=school-db-server.edu
SCHOOL_DB_PORT=3306
SCHOOL_DB_USER=school_db_user
SCHOOL_DB_PASSWORD=school_db_password
SCHOOL_DB_NAME=school_student_db

# School API Integration
SCHOOL_API_ENABLED=false
SCHOOL_API_BASE_URL=https://api.school.edu/v1
SCHOOL_API_KEY=your_school_api_key_here
SCHOOL_API_TIMEOUT=10000

# LDAP/Active Directory Integration
LDAP_ENABLED=false
LDAP_URL=ldap://ldap.school.edu:389
LDAP_BASE_DN=dc=school,dc=edu
LDAP_BIND_DN=cn=admin,dc=school,dc=edu
LDAP_BIND_PASSWORD=ldap_admin_password

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@school.edu

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log
AUDIT_LOG_ENABLED=true

# =============================================================================
# REAL-TIME CONFIGURATION
# =============================================================================
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
UPTIME_MONITORING=false

# =============================================================================
# DEVELOPMENT ONLY (Remove in production)
# =============================================================================
# DEBUG=*
# NODE_ENV=development
# LOG_LEVEL=debug 