{
    "name": "KMU Discipline Desk",
    "short_name": "KMU Desk",
    "description": "Student Discipline Management System - Fast, Secure, and Offline-Capable",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#10B981",
    "theme_color": "#10B981",
    "orientation": "portrait-primary",
    "scope": "/",
    "lang": "en",
    "dir": "ltr",
    "categories": ["education", "productivity", "business"],
    "icons": [
        {
            "src": "/kmu_logo.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "/kmu_logo.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/kmu_logo.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        }
    ],
    "shortcuts": [{
            "name": "New Case",
            "short_name": "New Case",
            "description": "Create a new discipline case",
            "url": "/cases/new",
            "icons": [{
                "src": "/kmu_logo.png",
                "sizes": "96x96",
                "type": "image/png"
            }]
        },
        {
            "name": "View Cases",
            "short_name": "Cases",
            "description": "View all discipline cases",
            "url": "/cases",
            "icons": [{
                "src": "/kmu_logo.png",
                "sizes": "96x96",
                "type": "image/png"
            }]
        },
        {
            "name": "Students",
            "short_name": "Students",
            "description": "Manage student records",
            "url": "/students",
            "icons": [{
                "src": "/kmu_logo.png",
                "sizes": "96x96",
                "type": "image/png"
            }]
        }
    ],
    "screenshots": [{
            "src": "/kmu_logo.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "KMU Discipline Desk Dashboard"
        },
        {
            "src": "/kmu_logo.png",
            "sizes": "750x1334",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "KMU Discipline Desk Mobile View"
        }
    ],
    "prefer_related_applications": false,
    "related_applications": [],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "protocol_handlers": [{
        "protocol": "web+kmudesk",
        "url": "/?case=%s"
    }],
    "file_handlers": [{
        "action": "/",
        "accept": {
            "text/csv": [".csv"],
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
            "application/vnd.ms-excel": [".xls"]
        }
    }]
}